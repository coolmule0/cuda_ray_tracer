{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++13 build active file",
            "command": "/usr/bin/g++-13",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "CUDA debug compile",
            "command": "/opt/cuda/bin/nvcc",
            "args": [
                "-g",
                "-G",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.cu.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$nvcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
    ],
    "version": "2.0.0"
}